<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Allow Just-In-Time compilation for WebView content -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>
  
  <!-- Required for running child processes (terminal commands) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
  
  <!-- Allow environment variables for server configuration -->
  <key>com.apple.security.cs.allow-dyld-environment-variables</key>
  <true/>
  
  <!-- Network access for your web servers -->
  <key>com.apple.security.network.client</key>
  <true/>
  <key>com.apple.security.network.server</key>
  <true/>
  
  <!-- File access for configurations and logs -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>
  <key>com.apple.security.files.bookmarks.app-scope</key>
  <true/>
  
  <!-- Allow running shell commands -->
  <key>com.apple.security.automation.shell-script</key>
  <true/>
</dict>
</plist> 