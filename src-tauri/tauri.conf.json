{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fleur",
  "version": "0.2.17",
  "identifier": "com.fleur.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "resizable": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "entitlements": "macos/entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGODVDQzZBM0EzOEIzODIKUldTQ3N6ZzZhc3lGWHcydHl6L3Z3ejVya29NYUpRNEJRZmRRb0lzWW4xV25vdTQrSXpBdzR0Z1kK",
      "endpoints": [
        "https://github.com/fleuristes/fleur/releases/latest/download/latest.json"
      ]
    }
  }
}
